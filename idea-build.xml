    <mkdir dir="${desktop.output.dir}"/>
    <javac destdir="${desktop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.desktop}/javac">
      <compilerarg line="${compiler.args.desktop}"/>
      <bootclasspath refid="desktop.module.bootclasspath"/>
      <classpath refid="desktop.module.production.classpath"/>
      <src refid="desktop.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.desktop"/>
    </javac>
    
    <copy todir="${desktop.output.dir}">
      <fileset dir="${module.desktop.basedir}/desktop/source">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.desktop"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.desktop.tests" depends="compile.module.desktop.production" description="compile module desktop; test classes" unless="skip.tests"/>
  
  <target name="clean.module.desktop" description="cleanup module">
    <delete dir="${desktop.output.dir}"/>
    <delete dir="${desktop.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.main, clean.module.android, clean.module.desktop" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.main, compile.module.android, compile.module.desktop" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.desktop:jar" value="${basedir}/out/artifacts/desktop_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.desktop.jar" value="${artifacts.temp.dir}/desktop.jar"/>
  </target>
  
  <target name="artifact.desktop:jar" depends="init.artifacts, compile.module.desktop, compile.module.main" description="Build &#39;desktop:jar&#39; artifact">
    <property name="artifact.temp.output.desktop:jar" value="${artifacts.temp.dir}/desktop_jar"/>
    <mkdir dir="${artifact.temp.output.desktop:jar}"/>
    <jar destfile="${temp.jar.path.desktop.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${desktop.output.dir}"/>
      <zipfileset dir="${main.output.dir}"/>
      <zipfileset dir="${basedir}/android/assets"/>
      <zipfileset src="${basedir}/main/libs/main/gdx.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-natives.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-backend-lwjgl.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-backend-lwjgl-natives.jar"/>
      <zipfileset src="${basedir}/main/libs/main/guava-10.0.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/tween-engine-api.jar"/>
      <zipfileset src="${basedir}/main/libs/main/js.jar"/>
      <zipfileset src="${basedir}/main/libs/main/commons-lang3-3.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/jackson-mapper-asl-1.9.5.jar"/>
