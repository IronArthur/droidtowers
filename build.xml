<?xml version="1.0" encoding="UTF-8"?>
<project name="DroidTowers" default="all">


  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!--
  <property name="skip.tests" value="true"/>
   -->

  <!-- Compiler options -->

  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="compiler.excluded">
    <exclude name="${basedir}/android/gen/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>

  <!-- JDK definitions -->

  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="lib/deploy.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javaws.jar"/>
      <include name="lib/jce.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/management-agent.jar"/>
      <include name="lib/plugin.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="../Classes/alt-rt.jar"/>
      <include name="../Classes/alt-string.jar"/>
      <include name="../Classes/charsets.jar"/>
      <include name="../Classes/classes.jar"/>
      <include name="../Classes/jsse.jar"/>
      <include name="../Classes/ui.jar"/>
      <include name="lib/ext/apple_provider.jar"/>
      <include name="lib/ext/dnsns.jar"/>
      <include name="lib/ext/localedata.jar"/>
      <include name="lib/ext/sunjce_provider.jar"/>
      <include name="lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>

  <property name="jdk.bin.android_2.3.3_platform"
            value="${jdk.home.android_2.3.3_platform}/../../../../../System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_2.3.3_platform">
    <fileset dir="${jdk.home.android_2.3.3_platform}">
      <include name="platforms/android-10/android.jar"/>
      <include name="platforms/android-10/data/res"/>
    </fileset>
  </path>

  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>


  <!-- Project Libraries -->

  <path id="library.android.classpath">
    <fileset dir="${basedir}/android/libs">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>

  <path id="library.desktop.classpath">
    <fileset dir="${basedir}/desktop/libs/main">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>

  <path id="library.main.classpath">
    <fileset dir="${basedir}/main/libs/main">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>

  <!-- Modules -->

  <import file="${basedir}/main/module_main.xml"/>

  <import file="${basedir}/android/module_android.xml"/>

  <import file="${basedir}/desktop/module_desktop.xml"/>

  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>

  <target name="clean" depends="clean.module.main, clean.module.android, clean.module.desktop"
          description="cleanup all"/>

  <target name="build.modules"
          depends="init, clean, compile.module.main, compile.module.android, compile.module.desktop"
          description="build all modules"/>

  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.desktop:jar" value="${basedir}/out/artifacts/desktop_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.desktop.jar" value="${artifacts.temp.dir}/desktop.jar"/>
  </target>

  <target name="artifact.desktop:jar" depends="init.artifacts, compile.module.desktop, compile.module.main"
          description="Build &#39;desktop:jar&#39; artifact">
    <property name="artifact.temp.output.desktop:jar" value="${artifacts.temp.dir}/desktop_jar"/>
    <mkdir dir="${artifact.temp.output.desktop:jar}"/>
    <jar destfile="${temp.jar.path.desktop.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/desktop/source/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${desktop.output.dir}"/>
      <zipfileset dir="${main.output.dir}"/>
      <zipfileset src="${basedir}/main/libs/main/tween-engine-api.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-natives.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-backend-lwjgl.jar"/>
      <zipfileset src="${basedir}/desktop/libs/main/gdx-backend-lwjgl-natives.jar"/>
      <zipfileset src="${basedir}/main/libs/main/gdx.jar"/>
      <zipfileset src="${basedir}/main/libs/main/guava-10.0.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/commons-codec-1.4.jar"/>
      <zipfileset src="${basedir}/main/libs/main/commons-logging-1.1.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/httpasyncclient-4.0-alpha2.jar"/>
      <zipfileset src="${basedir}/main/libs/main/httpclient-4.1.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/httpcore-4.1.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/httpcore-nio-4.1.1.jar"/>
      <zipfileset src="${basedir}/main/libs/main/jackson-core-asl-1.8.5.jar"/>
      <zipfileset src="${basedir}/main/libs/main/jackson-mapper-asl-1.8.5.jar"/>
      <zipfileset src="${basedir}/main/libs/main/js.jar"/>
      <zipfileset dir="${basedir}/android/assets"/>
    </jar>
    <copy file="${temp.jar.path.desktop.jar}" tofile="${artifact.temp.output.desktop:jar}/desktop.jar"/>
  </target>

  <target name="build.all.artifacts" depends="artifact.desktop:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.desktop:jar}"/>
    <copy todir="${artifact.output.desktop:jar}">
      <fileset dir="${artifact.temp.output.desktop:jar}"/>
    </copy>

    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>

  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>

  <target name="osx" depends="artifact.desktop:jar" description="Build an example application">
    <taskdef name="jarbundler"
             classpath="${ant.home}/lib/jarbundler-2.2.0.jar"
             classname="net.sourceforge.jarbundler.JarBundler"/>

    <jarbundler dir="${basedir}" verbose="true" showPlist="true"
                name="${ant.project.name}"
                mainclass="com.unhappyrobot.DesktopGame"
                jar="${artifact.output.desktop:jar}/desktop.jar"
                icon="icons/${ant.project.name}.icns"
                version="${version}"/>

  </target>

  <property name="launch4j.dir" location="${ant.home}/lib/launch4j"/>

  <target name="exe" depends="artifact.desktop:jar">
    <taskdef name="launch4j"
             classname="net.sf.launch4j.ant.Launch4jTask"
             classpath="${launch4j.dir}/launch4j.jar
            :${launch4j.dir}/lib/xstream.jar"/>
    <launch4j>
      <config headerType="gui" jar="${artifact.output.desktop:jar}/desktop.jar" outfile="${ant.project.name}.exe"
              errTitle="${ant.project.name}" chdir="."
              customProcName="true" icon="ConsoleApp.ico">
        <singleInstance mutexName="com.unhappyrobot.DesktopGame"/>
        <jre minVersion="1.6.0" />
      </config>
    </launch4j>
  </target>
</project>
