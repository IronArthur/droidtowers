<?xml version="1.0" encoding="UTF-8"?>
<project name="module_happydroids-common" default="compile.module.happydroids-common">
  <dirname property="module.happydroids-common.basedir" file="${ant.file.module_happydroids-common}"/>
  
  <property name="module.jdk.home.happydroids-common" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.happydroids-common" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.happydroids-common" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.happydroids-common" value="${compiler.args}"/>
  
  <property name="happydroids-common.output.dir" value="${module.happydroids-common.basedir}/../out/production/happydroids-common"/>
  <property name="happydroids-common.testoutput.dir" value="${module.happydroids-common.basedir}/../out/test/happydroids-common"/>
  
  <path id="happydroids-common.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="happydroids-common.module.production.classpath">
    <path refid="${module.jdk.classpath.happydroids-common}"/>
    <pathelement location="${basedir}/main/libs/main/jackson-annotations-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-core-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-databind-2.0.0.jar"/>
    <path refid="library.apache-commons.classpath"/>
    <path refid="library.apache-httpclient.classpath"/>
    <path refid="library.jackson.classpath"/>
    <path refid="library.guava.classpath"/>
  </path>
  
  <path id="happydroids-common.runtime.production.module.classpath">
    <pathelement location="${happydroids-common.output.dir}"/>
    <pathelement location="${basedir}/main/libs/main/jackson-annotations-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-core-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-databind-2.0.0.jar"/>
    <path refid="library.apache-commons.classpath"/>
    <path refid="library.apache-httpclient.classpath"/>
    <path refid="library.jackson.classpath"/>
    <path refid="library.guava.classpath"/>
  </path>
  
  <path id="happydroids-common.module.classpath">
    <path refid="${module.jdk.classpath.happydroids-common}"/>
    <pathelement location="${happydroids-common.output.dir}"/>
    <pathelement location="${basedir}/main/libs/main/jackson-annotations-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-core-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-databind-2.0.0.jar"/>
    <path refid="library.apache-commons.classpath"/>
    <path refid="library.apache-httpclient.classpath"/>
    <path refid="library.jackson.classpath"/>
    <path refid="library.guava.classpath"/>
  </path>
  
  <path id="happydroids-common.runtime.module.classpath">
    <pathelement location="${happydroids-common.testoutput.dir}"/>
    <pathelement location="${happydroids-common.output.dir}"/>
    <pathelement location="${basedir}/main/libs/main/jackson-annotations-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-core-2.0.0.jar"/>
    <pathelement location="${basedir}/main/libs/main/jackson-databind-2.0.0.jar"/>
    <path refid="library.apache-commons.classpath"/>
    <path refid="library.apache-httpclient.classpath"/>
    <path refid="library.jackson.classpath"/>
    <path refid="library.guava.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.happydroids-common">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.happydroids-common">
    <patternset refid="compiler.excluded"/>
    <patternset refid="excluded.from.module.happydroids-common"/>
  </patternset>
  
  <path id="happydroids-common.module.sourcepath">
    <dirset dir="${module.happydroids-common.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.happydroids-common" depends="compile.module.happydroids-common.production,compile.module.happydroids-common.tests" description="Compile module happydroids-common"/>
  
  <target name="compile.module.happydroids-common.production" depends="register.custom.compilers" description="Compile module happydroids-common; production classes">
    <mkdir dir="${happydroids-common.output.dir}"/>
    <javac2 destdir="${happydroids-common.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.happydroids-common}/javac">
      <compilerarg line="${compiler.args.happydroids-common}"/>
      <bootclasspath refid="happydroids-common.module.bootclasspath"/>
      <classpath refid="happydroids-common.module.production.classpath"/>
      <src refid="happydroids-common.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.happydroids-common"/>
    </javac2>
    
    <copy todir="${happydroids-common.output.dir}">
      <fileset dir="${module.happydroids-common.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.happydroids-common"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.happydroids-common.tests" depends="register.custom.compilers,compile.module.happydroids-common.production" description="compile module happydroids-common; test classes" unless="skip.tests"/>
  
  <target name="clean.module.happydroids-common" description="cleanup module">
    <delete dir="${happydroids-common.output.dir}"/>
    <delete dir="${happydroids-common.testoutput.dir}"/>
  </target>
</project>